.article-detail-img-main{
  width: 100%;
  height: 460rpx;
  position: relative;
}
.article-detail-img-music{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  left: 50%;
  margin-left: -60rpx;
  margin-top: 170rpx;
  position: absolute;
}
.article-detail-head{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
}
.article-detail-head-avatar{
  width: 100rpx;
  height: 100rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10px;
  border-radius: 50%;
}
.article-detail-head-name,
.article-detail-head-text,
.article-detail-head-time{
  margin-left: 10px;
  vertical-align: middle;
  color: #333;
}
.article-detail-title{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10px;
  font-size: 36rpx;
  font-weight: 600;
}
.article-detail-opreation{
  border-top: 2rpx solid #ddd;
  position: relative;
  margin-bottom: 60rpx;
}
.article-detail-opreation-img{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -50rpx;
  border-radius: 50%;
  right: 0;
}
.collect{
  right: 140rpx;
}
.article-detail-desc{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 30rpx;
  font-size: 32rpx;
  color: #333;
}