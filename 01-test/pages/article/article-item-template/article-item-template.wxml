<template name="articleItem">
  <view class='article-item'>
    <view class='article-head'>
      <image class='article-head-avatar' src='{{avatar}}'></image>
      <text class='article-head-time'>{{date}}</text>
    </view>
    <text class='article-title'>{{title}}</text>
    <image class='article-image' src='{{image}}'></image>
    <text class='article-description'>{{desc}}</text>
    <view class='article-footer'>
      <image class='article-footer-img' src='/images/icon/star.jpg'></image>
      <text class='article-footer-text'>{{like}}</text>
      <image class='article-footer-img' src='/images/icon/eye.jpg'></image>
      <text class='article-footer-text'>{{view}}</text>
    </view>
  </view>
</template>